<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.cancercare.CheckDateActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     >

        <TextView
            android:text="CheckDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:textSize="24sp"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            android:layout_below="@+id/textView22"
           />

        <TextView
            android:text="urine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:layout_marginTop="72dp"
            android:layout_below="@+id/textView30"
            android:layout_alignParentStart="true"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/activity_check_urine_id"
            android:layout_alignBottom="@+id/textView31"
            android:layout_alignStart="@+id/activity_check_fever_id" />

        <TextView
            android:text="fever"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:layout_below="@+id/textView29"
            android:layout_alignParentStart="true"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/activity_check_fever_id"
            android:layout_above="@+id/textView31"
            android:layout_alignParentEnd="true"
            android:textSize="24sp" />

        <TextView
            android:text="bloodanalysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:layout_alignBaseline="@+id/activity_check_bloodanalysis_id"
            android:layout_alignBottom="@+id/activity_check_bloodanalysis_id"
            android:layout_alignParentStart="true"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/activity_check_bloodanalysis_id"
            android:layout_below="@+id/spinner4"
            android:layout_alignStart="@+id/activity_check_fever_id" />
    </LinearLayout>

</RelativeLayout>
